<resources>

    <!-- Base application theme. -->
    <!--Disable the theme-provided ActionBar.-->
    <!--<style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="actionMenuTextColor">@color/colorPrimaryLight</item>
        <!--Set Status Bar Color-->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <!--Toolbar Options menu dots-->
        <item name="android:textColorSecondary">@color/colorPrimaryLight</item>
        <!--Toolbar menu item background-->
        <item name="android:itemBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
